<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/button1"
            android:text="➕"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="150dp"
            tools:layout_editor_absoluteX="150dp"/>

    <Button
            android:id="@+id/button2"
            android:text="➖"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="210dp"
            tools:layout_editor_absoluteX="150dp"/>

    <Button
            android:id="@+id/button3"
            android:text="✖︎"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="270dp"
            tools:layout_editor_absoluteX="150dp"/>

    <Button
            android:id="@+id/button4"
            android:text="➗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
            tools:layout_editor_absoluteX="150dp"/>

    <EditText
            android:id="@+id/ed1"
            android:textSize="30sp"
            android:layout_width="70sp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="240dp"
            tools:layout_editor_absoluteX="40dp"/>

    <EditText
            android:id="@+id/ed2"
            android:textSize="30sp"
            android:layout_width="70sp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="240dp"
            tools:layout_editor_absoluteX="300dp"/>


</android.support.constraint.ConstraintLayout>